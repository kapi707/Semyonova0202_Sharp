<Window x:Class="demo0202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление заявками партнеров" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Icon="/Новые технологии (1).png"
        FontFamily="Bahnschrift Light SemiCondensed">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF0C4882">
            <TextBlock Text="Управление заявками партнеров" 
                      Foreground="White" FontSize="20" FontWeight="Bold"
                      VerticalAlignment="Center" Margin="15"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="#FFE6F3FF" Margin="10">

                <Image Height="100" Width="100" Source="/Новые технологии (1).png"
                       HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <Button x:Name="BtnNewRequest" Content="Новая заявка" 
                        Click="BtnNewRequest_Click" Margin="0,5" Height="35"
                        Background="#FF0C4882" Foreground="White" FontSize="14"/>
                <Button x:Name="BtnProducts" Content="Каталог продукции" 
                        Click="BtnProducts_Click" Margin="0,5" Height="35"
                        Background="#FF0C4882" Foreground="White" FontSize="14"/>
                <Button x:Name="BtnCalculations" Content="Расчеты" 
                        Click="BtnCalculations_Click" Margin="0,5" Height="35"
                        Background="#FF0C4882" Foreground="White" FontSize="14"/>

            </StackPanel>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="10">
                <ItemsControl x:Name="RequestsContainer">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#FF0C4882" BorderThickness="1" 
                                    Margin="0,5" Background="White" 
                                    MouseLeftButtonUp="Border_MouseLeftButtonUp"
                                    Tag="{Binding RequestID}"
                                    Cursor="Hand">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding PartnerTypeInfo}" 
                                                   FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding Address}" 
                                                   FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding ContactInfo}" 
                                                   FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding RatingInfo}" 
                                                   FontSize="12" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding TotalAmount}" 
                                                   FontSize="16" FontWeight="Bold" 
                                                   Foreground="#FF0C4882"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <StatusBar Grid.Row="2" Background="#FF0C4882"/>
    </Grid>
</Window>