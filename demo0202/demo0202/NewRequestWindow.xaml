<Window x:Class="demo0202.NewRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание новой заявки" Height="600" Width="1145"
        WindowStartupLocation="CenterOwner" Icon="/Новые технологии (1).png"
         FontFamily="Bahnschrift Light SemiCondensed">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Создание новой заявки" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="#FF0C4882" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
                <StackPanel Margin="10">
                    <TextBlock Text="Информация о партнере" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ComboBox x:Name="CmbPartners" DisplayMemberPath="CompanyName"
                              SelectionChanged="CmbPartners_SelectionChanged"
                              Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Тип партнера:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtPartnerType" Margin="0,0,0,10"/>

                    <TextBlock Text="Директор:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtDirector" Margin="0,0,0,10"/>

                    <TextBlock Text="Телефон:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtPhone" Margin="0,0,0,10"/>

                    <TextBlock Text="Email:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtEmail" Margin="0,0,0,10"/>

                    <TextBlock Text="Адрес:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtAddress" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <TextBlock Text="Рейтинг:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtRating" Margin="0,0,0,10"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Товары в заявке" FontWeight="Bold" Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,25,0,10">
                        <ComboBox x:Name="CmbProducts" DisplayMemberPath="ProductName" 
                                  Width="312" Margin="0,0,10,0" Height="30"/>
                        <TextBox x:Name="TxtQuantity" Text="1" Width="60" 
                                 Height="30" TextAlignment="Center"/>
                        <TextBlock Text="шт." VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <Button x:Name="BtnAddProduct" Content="Добавить" 
                                Click="BtnAddProduct_Click" Height="30" Width="103"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="DgRequestItems" 
                              AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:N2} ₽}" Width="100"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding Total, StringFormat={}{0:N2} ₽}" Width="120"/>
                            <DataGridTemplateColumn Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Удалить" Click="BtnRemoveItem_Click"
                                                Background="Red" Foreground="White" Margin="5"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="0,10,0,0">
                        <TextBlock Text="Итоговая сумма:" FontWeight="Bold" 
                                   FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtTotalAmount" Text="0.00 ₽" 
                                   FontWeight="Bold" FontSize="16" 
                                   Foreground="#FF0C4882" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить заявку" Click="BtnSaveRequest_Click"
                    Background="#FF0C4882" Foreground="White" 
                    Margin="0,0,10,0" Width="120" Height="30"/>
            <Button Content="Отмена" Click="BtnCancel_Click"
                    Background="Gray" Foreground="White" 
                    Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>