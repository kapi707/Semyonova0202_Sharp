<Window x:Class="demo0202.EditRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заявки" Height="450" Width="800" Icon="/Новые технологии (1).png"
        FontFamily="Bahnschrift Light SemiCondensed">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование заявки" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <DataGrid Grid.Row="1" x:Name="DgRequestItems" 
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  CellEditEnding="DgRequestItems_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Товар" 
                    Binding="{Binding Product.ProductName, Mode=OneWay}" 
                    Width="*" IsReadOnly="True"/>

                <DataGridTextColumn Header="Кол-во" 
                    Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                    Width="80"/>

                <DataGridTextColumn Header="Цена" 
                    Binding="{Binding Price, StringFormat={}{0:N2} ₽, Mode=OneWay}" 
                    Width="100" IsReadOnly="True"/>

                <DataGridTextColumn Header="Сумма" Width="120" 
                    Binding="{Binding Total, Mode=OneWay}"/>

                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Click="BtnDeleteItem_Click"
                                    Background="Red" Foreground="White" Margin="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить изменения" Click="BtnSave_Click"
                    Background="#FF0C4882" Foreground="White" 
                    Margin="0,0,10,0" Width="120" Height="30"/>
            <Button Content="Закрыть" Click="BtnClose_Click"
                    Background="Gray" Foreground="White" 
                    Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>